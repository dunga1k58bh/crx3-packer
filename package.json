{
  "name": "crx3-packer",
  "version": "1.0.0",
  "description": "A Node.js package to pack folders or zip files into CRX3 format for Chrome extensions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "crx3-pack": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && npm run copy:proto",
    "build:proto": "npx --package protobufjs-cli pbjs -t static-module -w commonjs -o src/crx3.proto.js crx3.proto && npx --package protobufjs-cli pbts -o src/crx3.proto.d.ts src/crx3.proto.js",
    "copy:proto": "copy src\\crx3.proto.js dist\\ && copy src\\crx3.proto.d.ts dist\\",
    "prepublish": "npm run build",
    "test": "jest",
    "dev": "tsc --watch"
  },
  "keywords": [
    "crx3",
    "chrome",
    "extension",
    "pack",
    "protobuf"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "protobufjs": "^7.2.5",
    "yauzl": "^3.0.0",
    "yazl": "^2.5.1",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/yauzl": "^2.10.3",
    "@types/yazl": "^2.4.5",
    "typescript": "^5.2.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0"
  },
  "files": [
    "dist/**/*",
    "crx3.proto",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/crx3-packer.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/crx3-packer/issues"
  },
  "homepage": "https://github.com/yourusername/crx3-packer#readme"
}